{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "eslint.config.js",
    "packages/tooling/eslint-config/**",
    "packages/tooling/vitest-config/**",
    "vitest.integration.workspace.ts",
    "scripts/lint/**",
    "scripts/test/**",
    "scripts/test-quiet.sh",
    "scripts/test-integration-quiet.sh",
    "scripts/check-shell-invariants.sh",
    "scripts/validate-ci-env.mjs"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "generate:api": {
      "dependsOn": ["^build"],
      "outputs": ["lib/api/generated/**"]
    }
  }
}
