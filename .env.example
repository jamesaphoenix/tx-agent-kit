# Shared
NODE_ENV=development

# API
API_PORT=4000
API_HOST=0.0.0.0
WORKTREE_PORT_OFFSET=0
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tx_agent_kit
AUTH_SECRET=replace-with-a-long-random-secret
API_CORS_ORIGIN=http://localhost:3000
WEB_BASE_URL=http://localhost:3000
RESEND_API_KEY=
RESEND_FROM_EMAIL=tx-agent-kit <no-reply@example.com>

# Web
API_BASE_URL=http://localhost:4000

# Docs
DOCS_PORT=3002

# Temporal
TEMPORAL_RUNTIME_MODE=cli
TEMPORAL_ADDRESS=localhost:7233
# For app containers on Docker Desktop/macOS, use host.docker.internal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=tx-agent-kit
TEMPORAL_API_KEY=
TEMPORAL_TLS_ENABLED=false
TEMPORAL_TLS_SERVER_NAME=
# OctoSpark examples:
# TEMPORAL_CLOUD_TEST_ADDRESS=europe-west3.gcp.api.temporal.io:7233
# TEMPORAL_CLOUD_TEST_NAMESPACE=octospark-staging.kpujg
TEMPORAL_CLOUD_TEST_ADDRESS=
TEMPORAL_CLOUD_TEST_NAMESPACE=
TEMPORAL_CLOUD_TEST_API_KEY=
WORKER_INSPECT_PORT=9229

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_LOGS_EXPORTER=otlp

# MCP - Prometheus
# Prometheus MCP runs in Docker; this host alias reaches your host stack.
PROMETHEUS_URL=http://host.docker.internal:9090
# Optional: pin/override image tag.
# PROMETHEUS_MCP_IMAGE=ghcr.io/pab1it0/prometheus-mcp-server:latest

# MCP - Jaeger
JAEGER_URL=http://localhost
JAEGER_PROTOCOL=HTTP
JAEGER_PORT=16686

# MCP - Context7
CONTEXT7_TRANSPORT=stdio
# CONTEXT7_API_KEY=
# CONTEXT7_PORT=3000

# MCP - Supabase
SUPABASE_MCP_READ_ONLY=true
# SUPABASE_ACCESS_TOKEN=
# SUPABASE_PROJECT_REF=
# SUPABASE_API_URL=https://api.supabase.com
# SUPABASE_MCP_FEATURES=database,docs,development

# MCP - Playwright
PLAYWRIGHT_MCP_HEADLESS=true
PLAYWRIGHT_MCP_ISOLATED=true
# PLAYWRIGHT_MCP_BROWSER=chrome
# PLAYWRIGHT_MCP_CAPS=vision,pdf,devtools
# PLAYWRIGHT_MCP_OUTPUT_DIR=.artifacts/playwright-mcp
