{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@tx-agent-kit/auth": ["packages/auth/src/index.ts"],
      "@tx-agent-kit/contracts": ["packages/contracts/src/index.ts"],
      "@tx-agent-kit/core": ["packages/core/src/index.ts"],
      "@tx-agent-kit/db": ["packages/db/src/index.ts"],
      "@tx-agent-kit/observability": ["packages/observability/src/index.ts"]
    }
  }
}
