{
  "name": "tx-agent-kit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@tx-agent-kit/web",
    "dev:api": "turbo run dev --filter=@tx-agent-kit/api",
    "dev:worker": "turbo run dev --filter=@tx-agent-kit/worker",
    "build": "turbo run build",
    "openapi:generate": "pnpm --filter @tx-agent-kit/api openapi:generate",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint && pnpm lint:invariants",
    "lint:invariants": "node ./scripts/lint/enforce-domain-invariants.mjs",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "mcp:prometheus": "./scripts/mcp/prometheus.sh",
    "mcp:jaeger": "./scripts/mcp/jaeger.sh",
    "infra:up": "docker compose --profile infra up -d",
    "infra:down": "docker compose down -v",
    "db:migrate": "pnpm --filter @tx-agent-kit/db db:migrate",
    "db:studio": "pnpm --filter @tx-agent-kit/db db:studio"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.18.6",
    "eslint": "^9.39.2",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.18"
  }
}
